Â«<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Todos los productos'}) %>
<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->

	<!-- todos los productos -->

	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Todos los productos</h2>
			</div>
			<% productos.forEach(productos => { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/products/detail/<%= productos.id %>">
							<figure class="product-box_image">
								<img src="/images/products/<%= productos.image %>" alt="imagen de producto">
							</figure>
							<article class="product-box_data">
								
								<% let precioFinal=productos.price-(productos.discount*productos.price/100)%>
								<h2><%= precioFinal %></h2>
								<% if (productos.discount>0) { %>
									<span><%= productos.discount %>% OFF</span>
								<% } %>
								
								<p><%= productos.name %></p>
								<i class="fas fa-truck"></i>
							</article>
						</a>
					</section>
				</div>
			<% }) %>
			
			
	</div>
	<!-- /todos los productos -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>